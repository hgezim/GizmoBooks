<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
	<head>
		<title>{% block title %}GizmoBooks.com - The New Way to Buy and Sell Textbooks{% endblock title  %}</title>
		<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
		<link href="{{ MEDIA_URL }}styles/new_style.css" rel="stylesheet" type="text/css" media="all" />
		{% block headerJS %}
		{% endblock headerJS %}
		{% load facebook %}
		{% facebook_init %}
    		{% block facebook_code %}{% endblock %}
		{% endfacebook %}
	</head>
	<body class="{% block bodyStyle %}{% endblock %}">
		<div id="container">
            <div id="header"> <!-- header -->
                <div id="logo">
                	<a href="{% url main %}">
                		<img src="{{ MEDIA_URL }}images/logo.png" width="399" height="50" alt="GizmoBooks.com Logo" />
                	</a>
                </div>
                
                {% block nav %}
				<!-- navigation start -->
				<div id="navcontainer">
					<ul id="navlist">
						<li><a id="sell_link" href="{% url post %}" style="font-size: 150%;">Sell</a></li>
						<li><a id="sell_link" href="{% url buy %}" style="font-size: 150%;">Buy</a></li>
						{% if request.user.is_authenticated %}<li><a id="mybooks_link" href="{% url profile %}">My Books</a></li>{% endif %}
						{% if not request.user.is_authenticated %}
							<li><a id="login_link" href="{% url auth_login %}">Login</a></li>
						{% else %}
							<li><a id="logout_link" href="{% url auth_logout %}">Logout</a></li>
						{% endif %}
						<li><a id="feedback_link" href="http://gizmobooks.uservoice.com/" target="_blank">Feedback</a></li>
						<li><a id="about_link" href="{% url about %}">About</a></li>
					</ul>
				</div>
				<!-- navigation ends -->
				{% endblock nav %}
				<div class="clear"></div>
			</div> <!-- end of header -->
			
			<!-- Messages -->
			{% if messages %}
			<div class="messages">
			    {% for message in messages %}
			    <div {% if message.tags %} class="{{ message.tags }}"{% endif %}>
			    	{{ message|safe }}
			    </div>
			    {% endfor %}
			</div>
			<div class="clear"></div>
			{% endif %}
			<!-- End of Messages -->
			
			{% block content %}
			{% endblock content %}

            <!-- footer starts here -->
            <div class="clear"></div>
			<div id="footer">
				{% block footer %}{% endblock footer %}
					
				<div id="copyright">
					
					&#169; Copyright GizmoBooks.com. All rights reserved.
				</div>
			</div>
            <!-- footer ends here -->
            
